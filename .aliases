#!/bin/bash

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

alias xargs="xargs "

alias nviml="nvim --listen ~/.cache/nvim/server.sock"
alias nvr="nvim --server ~/.cache/nvim/server.sock"

alias ls="command ls ${colorflag}"
alias ll="ls -lh"
alias vim="nvim"
